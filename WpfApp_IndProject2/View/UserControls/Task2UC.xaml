<UserControl x:Class="WpfApp_IndProject2.View.UserControls.Task2UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_IndProject2.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="700"
             FontFamily="Comic Sans Ms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="156" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image Source="/Images/noroot.png"
               Grid.RowSpan="2"
               Stretch="UniformToFill"/>
        <Border Grid.Row="0"
                Padding="5"
                Background="#435560"
                Width="456"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="15"
                Opacity="0.9"
                Effect="{StaticResource MaterialDesignElevationShadow1}">
            <TextBlock Text='Задание №2 - Даны два натуральных числа а и b,
обозначающие соответственно числитель и знаменатель
дроби. Сократить дробь, используя функцию
определения наибольшего общего делителя.'
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#FFFFFF"
                       TextWrapping="Wrap"
                       FontSize="15"
                       FontWeight="SemiBold"/>
        </Border>
        <Border Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="350"
                Height="250"
                Opacity="0.9"
                Background="#435560"
                CornerRadius="15"
                Padding="5"
                Effect="{StaticResource MaterialDesignElevationShadow1}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Исходные данные:"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBox x:Name="TbA"
                                 Foreground="White"
                                 IsReadOnly="True"
                                 Width="110"
                                 TextAlignment="Center"
                                 FontSize="20"
                                 Margin="0 5 0 0"
                                 materialDesign:TextFieldAssist.UnderlineBrush="White"/>
                        <TextBox x:Name="TbB"
                                 Foreground="White"
                                 IsReadOnly="True"
                                 VerticalAlignment="Center"
                                 Width="110"
                                 TextAlignment="Center"
                                 FontSize="20"
                                 Margin="10 6 0 0"
                                 materialDesign:TextFieldAssist.UnderlineBrush="White"/>
                    </StackPanel>
                </StackPanel>
                <Button Background="Transparent"
                        Foreground="White"
                        BorderBrush="#FFFFFF"
                        x:Name="BtnGetAnswer"
                        Click="BtnGetAnswer_Click"
                        Margin="0 15 0 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="White"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        Height="40">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Library"
                                                 Margin="0 1 3 0"
                                                 Width="20"
                                                 Height="20"/>
                        <TextBlock Text="Сократить"
                                   FontSize="17"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#435560"
                Grid.Row="1"
                Margin="0 0 5 0">
            <materialDesign:PackIcon Kind="ArrowRight"
                             Foreground="#FFFFFF"
                             Width="30"
                             Height="30"/>
        </Button>
        
        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="#435560"
                Grid.Row="1"
                Margin="5 0 0 0">
            <materialDesign:PackIcon Kind="ArrowLeft"
                             Foreground="#FFFFFF"
                             Width="30"
                             Height="30"/>
        </Button>
    </Grid>
</UserControl>
