<UserControl x:Class="WpfApp_IndProject2.View.UserControls.Task29UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_IndProject2.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="700"
             FontFamily="Comic Sans Ms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="156" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image Source="/Images/noroot.png"
               Grid.RowSpan="2"
               Stretch="UniformToFill"/>

        <Border Grid.Row="0"
                Padding="5"
                Background="#435560"
                Width="456"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="15"
                Opacity="0.9"
                Effect="{StaticResource MaterialDesignElevationShadow1}">
            <TextBlock Text='Задание №29 - Сложение двоичных чисел'
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#FFFFFF"
                       TextWrapping="Wrap"
                       FontSize="15"
                       FontWeight="SemiBold"/>
        </Border>

        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#435560"
                Grid.Row="1"
                Margin="0 0 5 0">
            <materialDesign:PackIcon Kind="ArrowRight"
                                     Foreground="#FFFFFF"
                                     Width="30"
                                     Height="30"/>
        </Button>

        <Border Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="350"
                Height="370"
                Opacity="0.9"
                Background="#435560"
                CornerRadius="15"
                Padding="5"
                Effect="{StaticResource MaterialDesignElevationShadow1}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <StackPanel>
                    <TextBlock Text="Положительное число:"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="TbPositiveNumber"
                             TextAlignment="Center"
                             Foreground="White"
                             Width="300"
                             FontSize="20"
                             Margin="0 5 0 0"
                             ToolTip="Введите положительное двоичное число"/>
                </StackPanel>

                <StackPanel Margin="0 15 0 0">
                    <TextBlock Text="Отрицательное число:"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="TbNegativeNumber"
                             TextAlignment="Center"
                             Foreground="White"
                             Width="300"
                             FontSize="20"
                             Margin="0 5 0 0"
                             ToolTip="Введите отрицательное двоичное число (с ведущим 1)"/>
                </StackPanel>

                <Button Background="Transparent"
                        Foreground="White"
                        BorderBrush="#FFFFFF"
                        x:Name="BtnCalculate"
                        Click="BtnCalculate_Click"
                        Margin="0 20 0 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.Value="-1"
materialDesign:ButtonProgressAssist.IndicatorForeground="White"
materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        Height="40"
                        Width="180">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Calculator"
                                         Margin="0 1 3 0"
                                         Width="20"
                                         Height="20"/>
                        <TextBlock Text="Вычислить"
                                   FontSize="17"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <StackPanel Margin="0 15 0 0"
                            x:Name="SpResult"
                            Visibility="Collapsed">
                    <Border Background="#3E4D5C"
                            CornerRadius="10"
                            Padding="10"
                            Width="300">
                        <StackPanel>
                            <TextBlock Text="Результат сложения:"
                                       FontSize="18"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       TextAlignment="Center"/>

                            <Grid Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Двоичная:"
                                           Grid.Row="0" Grid.Column="0"
                                           Foreground="#FFD3D3D3"
                                           FontSize="16"/>
                                <TextBlock x:Name="TbBinaryResult"
                                           Grid.Row="0" Grid.Column="1"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 0 0 0"/>

                                <TextBlock Text="Десятичная:"
                                           Grid.Row="1" Grid.Column="0"
                                           Foreground="#FFD3D3D3"
                                           FontSize="16"
                                           Margin="0 5 0 0"/>
                                <TextBlock x:Name="TbDecimalResult"
                                           Grid.Row="1" Grid.Column="1"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 5 0 0"/>

                                <TextBlock Text="Формат:"
                                           Grid.Row="2" Grid.Column="0"
                                           Foreground="#FFD3D3D3"
                                           FontSize="16"
                                           Margin="0 5 0 0"/>
                                <TextBlock x:Name="TbResultType"
                                           Grid.Row="2" Grid.Column="1"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 5 0 0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="#435560"
                Grid.Row="1"
                Margin="5 0 0 0">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Foreground="#FFFFFF"
                                     Width="30"
                                     Height="30"/>
        </Button>
    </Grid>
</UserControl>